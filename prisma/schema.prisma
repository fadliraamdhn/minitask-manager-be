generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model users {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  Task     tasks[]
}

model tasks {
  id          Int    @id @default(autoincrement())
  user_id     Int
  title       String
  description String
  status      status @default(Inprogress)
  user        users  @relation(fields: [user_id], references: [id])
}

enum status {
  Complete
  Inprogress
}
